# background     base01
# background-alt base02
# foreground     base0A
# foreground-alt base09
# primary        base0B
# secondary      base0D
# alert          base08

bar {
    position bottom
    tray_output primary

    colors {
        separator $base03
        background $base01
        statusline $base0A
        # Class             border  BG      Text
        focused_workspace   $base03 $base03 $base0A
        active_workspace    $base02 $base02 $base0A
        inactive_workspace  $base01 $base01 $base0A
        urgent_workspace    $base08 $base08 $base0A
    }
}

